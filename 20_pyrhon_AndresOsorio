#******************************zona de funcion***************************
def pedir_los_litros():
    litros = float(input("Digite cunatos litros va a pasar a galones:"))
    return litros
def total(litros):
    galones= litros / 3.78541
    return galones
def mostrar_resultados(galones):
    print("litros a galones es "+ str(galones))

#*****************************codigo principal********************
litros = pedir_los_litros()
galones= total(litros)
mostrar_resultados(galones)
